{
	"$schema": "https://biomejs.dev/schemas/2.3.5/schema.json",
	"files": {
		"includes": ["./src/**/*"]
	},
	"overrides": [
		{
			"includes": ["**/*.svelte"],
			"linter": {
				"rules": {
					"style": {
						"useConst": "off",
						"useImportType": "off"
					},
					"correctness": {
						"noUnusedVariables": "off",
						"noUnusedImports": "off",
						"noSelfAssign": "off"
					}
				}
			}
		}
	],
	"css": {
		"linter": {
			"enabled": false
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"style": {
				"noNonNullAssertion": "off",
				"useTemplate": "off"
			},
			"complexity": {
				"noArguments": "off",
				"noStaticOnlyClass": "off",
				"noThisInStatic": "off",
				"noImportantStyles": "off"
			},
			"suspicious": {
				"noConfusingVoidType": "off",
				"useIterableCallbackReturn": "off",
				"noAssignInExpressions": "off",
				"noExplicitAny": "off",
				"noAsyncPromiseExecutor": "off"
			}
		}
	},
	"formatter": {
		"enabled": false
	},
	"assist": {
		"enabled": false
	}
}
